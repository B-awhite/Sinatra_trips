<h1>Edit Trip</h1>

<form method="post" action="/trips/<%=@trip.id%>" >
  <input type="hidden" name="_method" value="patch">
  <label>Name:</label>
  <input type="text" name="trip[name]" value="<%= @trip.name %>">
  <label>City:</label>
  <input type="text" name="trip[city]" value="<%= @trip.city %>">
  <% if @trip.user && @trip.user.id == current_user.id %>
  <input type="submit" value="edit trip">
  <% end %>
</form>
